#!/bin/zsh
SOURCE="$1"
if [[ ! -r "$SOURCE" ]]; then
    echo "Usage: ${0:t} <markdown file path>"
    exit 1
fi
shift
pandoc \
    --number-sections --section-divs --standalone --self-contained --toc \
    --reference-links --smart --latex-engine=xelatex \
    -V mainfont="Ubuntu" -V monofont="Iosevka" -V papersize=A4 \
    -V urlcolor=blue -V colorlinks -V toccolor=blue \
    -V geometry="margin=2cm" \
    "$SOURCE" -o "${SOURCE:r}.pdf" $*
