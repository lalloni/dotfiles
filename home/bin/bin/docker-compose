#!/bin/bash
set -Eeuo pipefail
BINARY="${XDG_CACHE:-$HOME/.cache}/docker-compose/docker-compose"
if [[ ! -r "$BINARY" || ! -x "$BINARY" ]]
then
    mkdir -p "$(dirname "$BINARY")" > /dev/null
    curl -sSLo "$BINARY" "https://github.com/docker/compose/releases/download/1.21.2/docker-compose-$(uname -s)-$(uname -m)"
    chmod +x "$BINARY"
fi
exec "$BINARY" "$@"
